{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions": [
      {
        "name": "bmart-app",
        "image": "$DOCKER_USERNAME/bmart-app:develop",
        "essential": false,
        "hostname" : "bmart-app",
        "memory": 128,
        "portMappings": 
            {
              "hostPort": 8080,
              "containerPort": 8080
            },
        "links": [
            "redis"
        ]
      },
      {
        "name": "nginx",
        "image": "$DOCKER_USERNAME/nginx-app:develop",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": [
          "bmart-app"
        ]
      },
      {
        "name": "redis",
        "image": "redis:latest",
        "essential": true,
        "memory": 128,
        "portMappings": [
          {
            "hostPort": 6379,
            "containerPort": 6379
          }
        ]
      }
    ]
  }
   